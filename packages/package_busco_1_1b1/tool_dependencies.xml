<?xml version="1.0"?>
<tool_dependency>
    <package name="augustus" version="3.1">
        <repository name="package_augustus_3_1" owner="iuc" prior_installation_required="True" />
    </package>
    <package name="blast+" version="2.2.31">
        <repository name="package_blast_plus_2_2_31" owner="iuc" prior_installation_required="True" />
    </package>
    <package name="hmmer" version="3.1b2">
        <repository name="package_hmmer_3_1b2" owner="iuc" prior_installation_required="True" />
    </package>
    <package name="python" version="3.4">
        <repository name="package_python_3_4" owner="iuc" prior_installation_required="True" />
    </package>
    <package name="busco" version="1.1b1">
        <install version="1.0">
            <actions>

                <action type="download_by_url" sha256sum="19e6e392185979571a7e5fb328ecdd43f91c10df0ccbedf4a355e26d9cc7153c">http://busco.ezlab.org/files/BUSCO_v1.1b1.tar.gz</action>

                <action type="move_file" rename_to="BUSCO.py">
                    <source>BUSCO_v1.1b1.py</source>
                    <destination>$INSTALL_DIR</destination>
                </action>

                <action type="shell_command">mkdir $INSTALL_DIR/data</action>

                <action type="change_directory">..</action>

                <action type="download_by_url" sha256sum="b4fc2dbe18453b1f77b7f16619934363c219fd60493f18bcf3e2a353ac1eb048">http://busco.ezlab.org/files/arthropoda_buscos.tar.gz</action>

                <action type="move_directory_files">
                    <source_directory>arthropoda</source_directory>
                    <destination_directory>$INSTALL_DIR/data/arthropoda</destination_directory>
                </action>

                <action type="download_by_url" sha256sum="bd416a2711364756210447cf79300ea42cced84609d0e4c7690a72140bccea3e">http://busco.ezlab.org/files/vertebrata_buscos.tar.gz</action>

                <action type="move_directory_files">
                    <source_directory>vertebrata</source_directory>
                    <destination_directory>$INSTALL_DIR/data/vertebrata</destination_directory>
                </action>

                <action type="download_by_url" sha256sum="cd084b0e335b64316a8357c0953b4509fc2348e0c292c1c6b15b6e69dec50045">http://busco.ezlab.org/files/fungi_buscos.tar.gz</action>

                <action type="move_directory_files">
                    <source_directory>fungi</source_directory>
                    <destination_directory>$INSTALL_DIR/data/fungi</destination_directory>
                </action>

                <action type="download_by_url" sha256sum="b3d0a588c1459f38d3fc574a604c429dcd4d6204fa1a7bf09a9b01d785a889bf">http://busco.ezlab.org/files/bacteria_buscos.tar.gz</action>

                <action type="move_directory_files">
                    <source_directory>bacteria</source_directory>
                    <destination_directory>$INSTALL_DIR/data/bacteria</destination_directory>
                </action>

                <action type="download_by_url" sha256sum="1613fb6a0e7bec8d7d4aefc220e0e6272dfacc5753e016c29d7e3c3631fc07fd">http://busco.ezlab.org/files/metazoa_buscos.tar.gz</action>

                <action type="move_directory_files">
                    <source_directory>metazoa</source_directory>
                    <destination_directory>$INSTALL_DIR/data/metazoa</destination_directory>
                </action>

                <action type="download_by_url" sha256sum="564f019b07ebeb8adfae43d2c9ef2b0235cc464c73c21aef1d5c22061ede4f5d">http://busco.ezlab.org/files/eukaryota_buscos.tar.gz</action>

                <action type="move_directory_files">
                    <source_directory>eukaryota</source_directory>
                    <destination_directory>$INSTALL_DIR/data/eukaryota</destination_directory>
                </action>

                <action type="set_environment">
                    <environment_variable name="BUSCO_ROOT_PATH" action="set_to">$INSTALL_DIR</environment_variable>
                    <environment_variable name="BUSCO_DATA_PATH" action="set_to">$INSTALL_DIR/data</environment_variable>
                </action>
            </actions>
        </install>
    </package>
</tool_dependency>
