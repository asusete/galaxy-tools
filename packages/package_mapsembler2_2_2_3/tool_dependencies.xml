<?xml version="1.0"?>
<tool_dependency>
    <package name="mapsembler2" version="2.2.3">
        <install version="1.0">
            <actions>
                <action type="download_by_url">http://www.irisa.fr/symbiose/people/ppeterlongo/mapsembler2_2.2.3.zip</action>
                <action type="shell_command">/bin/bash compile_all_tools.sh</action>
		<action type="move_file">
                    	<source>run_mapsembler2_pipeline.sh</source>
                   	 <destination>$INSTALL_DIR</destination>
                </action>
		<action type="chmod">
			<file mode="755">$INSTALL_DIR/run_mapsembler2_pipeline.sh</file>
		</action>
		 <action type="move_directory_files">
                        <source_directory>tools</source_directory>
                         <destination_directory>$INSTALL_DIR/tools</destination_directory>
                </action>

		<!-- create env.sh -->
                <action type="set_environment">
                    	<environment_variable name="PATH" action="prepend_to">$INSTALL_DIR</environment_variable>
                        <environment_variable name="TOOLS" action="set_to">$INSTALL_DIR/tools/</environment_variable>
                </action>                
            </actions>
        </install>
        <readme>
            This package installs mapsembler from the sources available in colib'read web site
        </readme>
    </package>
</tool_dependency>
