<tool id="feelnc2asko" name="feelnc2asko" version="0.01">
    <description>Generates a GFF compliant to askomics from feelnc</description>
    <requirements>
        <requirement type="package" version="perl-bioperl">1.6.924</requirement>
    </requirements>
    
    <command detect_errors="exit_code">
        <![CDATA[ perl '$__tool_directory__/feelnc2asko.pl' --ann '${anngff}' --lnc '${lncgtf}' --new '${newgtf}' > '${outgff}' ]]>
    </command>
    
    <inputs>
        <param format="gff" name="anngff" type="data" label="Initial annotation file (gff3)" />
        <param format="gtf" name="lncgtf" type="data" label="feelnc lncRNA annotation (gtf)" />
        <param format="gtf" name="newgtf" type="data" label="feelnc new mRNA annotation (gtf)" />
    </inputs>
    
    <outputs>
        <data format="gff" name="outgff" label="${tool.name} on ${on_string} : Create GFF" />
    </outputs>
    
    <tests>
        <test>
            <param name="anngff" ftype="gff" value="initial.gff3" />
            <param name="lncgtf" ftype="gtf" value="feelnc_lncRNA.gtf" />
            <param name="newgtf" ftype="gtf" value="feelnc_mRNA.gtf" />
            <output name="outgff" ftype="gff" file="completeAnnot.gff3" />
        </test>
    </tests>
    
    <help>
        Generates a GFF compliant to askomics from the feelnc output files merged with the initial annotation file.
    </help>

    <citations>
    </citations>
</tool>
